<script type="text/javascript">
      function setUserTravelMode() {
      $('#travelMode_<%= session[:travel_mode] %>').attr('checked',true)
      .parents('form:first').submit();
      }
</script>

<%= form_tag("/calcroute", :id => "routeForm", :onSubmit => "calcRoute();return false;") do %>
            
            <%#= label_tag(:routeStart, "Starting Place:") %>
            <%#= collection_select :routeStart, :place, current_user.places, :address, :name %>

            <!-- <%# TODO: We're not using waypoints. We have to build our own. Saving here as reference %> -->
            <%#= label_tag(:routeVia, "Waypoint: ") %>
            <%#= text_field_tag :routeVia, nil, :placeholder => "Addresses in between" %>
            <!-- <br><br> -->
            <%#= label_tag(:routeEnd, "Final Destination:") %>
            <%#= text_field_tag :routeEnd, nil, :placeholder => "Where you'll end the day..." %>
            <!-- Add in the arrive by time
            <%#= text_field_tag :routeEnd, @events.first.location %>   -->


            <%= label_tag("Travel Mode:") %>
            <%= radio_button_tag(:travelMode, "DRIVING", false, :class => 'submittable') %>
            <%= label_tag(:travelModeDriving, "Driving", :style => "display:inline") %>
            <%= radio_button_tag(:travelMode, "BICYCLING", false, :class => 'submittable') %>
            <%= label_tag(:travelModeBicycle, "Bicycling", :style => "display:inline") %>
            <%= radio_button_tag(:travelMode, "TRANSIT", false, :class => 'submittable') %>
            <%= label_tag(:travelModeTransit, "Public Transit", :style => "display:inline") %>
            <%= radio_button_tag(:travelMode, "WALKING", false, :class => 'submittable') %>
            <%= label_tag(:travelModeWalking, "Walking", :style => "display:inline") %>

<% end %>

<script type="text/javascript">
      $(setUserTravelMode());
</script>

