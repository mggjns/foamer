<!-- <script type="text/javascript" src="/assets/home.js"></script> -->

<div class="wrapper">
    
        <% if params[:page].to_i + - 1 >= 1 %>
            <a href="/home/<%= params[:page].to_i - 1 %>"><div class="arrowleft"><img src="/assets/arrowleft.png"></div></a>
        <% end %>
        <% if params[:page].to_i + - 1 == 0 %>
            <a href="/home/"><div class="arrowleft"></div></a>
        <% end %>
        <div class="content">

        <%= render 'events', :events => @events %>

<% content_for :page_scripts do %>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <%= render 'calcroute_setup', :format => [:js], :events => @events %>
<% end -%>
        
        <%= render 'mapform' %>
        <div class="map" id="mapContainer">
          <!-- <img src="direction.png"> -->
        </div><!--/fullday-->
        
        <div id="directionsPanel">
        </div>

        </div><!--/content-->

        <% if params[:page].to_i + 1 <= @events.length.to_i - 1 %>
            <a href="/home/<%= params[:page].to_i + 1 %>"><div class="arrowright"></div><img src="/assets/arrow.png"></a>
        <% end %>
    
    <%# end %>  

</div><!--/wrapper-->

