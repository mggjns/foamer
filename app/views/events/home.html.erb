<style type="text/css">
#mapContainer {
    height: 250px;
    width: 280px;
    /*border:5px solid #eaeaea;*/
}

</style>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="/assets/home.js"></script>



<div class="wrapper">
    
        <% if user_signed_in? %>
          <% @events.each do |event| %>

            <script type="text/javascript">
                $(document).ready(function() {
                    $(initialize());
                    $(calcRoute());
                });
            </script>

            <div class="arrowleft"></div>
            <div class="content">
            
            <%= render 'calcroute.js', :event => event %>
          

            <%= render 'events', :event => event %>
            <%= paginate @events %>

            <div class="map" id="mapContainer">
              <!-- <img src="direction.png"> -->
            </div><!--/fullday-->
            
            <div id="directionsPanel">
            
            </div>

        </div><!--/content-->

        <div class="arrowright"></div>
        
    <% end %>  

    <% else %>
        <div class="hero-unit">
            <h1>Calendar, meet maps!</h1>
            <h2>Map out your entire day with a single click. Sign in with your Google account to start.</h2>
            <h2><a href="/signin" class="zocial google">Sign In &raquo;</a></h2>    
        </div>
    <% end %>

</div><!--/wrapper-->

<%#= debug event %>
<%#= binding.pry %>
<%#= debug @api_data %>
<%#= debug current_user.timezone if current_user %>
<%#= debug params[:page] %>
