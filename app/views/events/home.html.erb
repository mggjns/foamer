<% content_for :page_scripts do %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?key=AIzaSyBxxlbKadojUc5YHoKY2XiuO8d3RIZYths&sensor=false"></script>
  <%= render 'calcroute_setup', :format => [:js], :events => @events %>
  <style type="text/css">
  #mapContainer {
    height: 250px;
    width: 280px;
    /*border:5px solid #eaeaea;*/
  }

  </style>
<% end -%>

<div class="wrapper">
  <% if params[:page].to_i + - 1 >= 1 %>
    <a href="/home/<%= params[:page].to_i - 1 %>"><div class="arrowleft"><img src="/assets/arrowleft.png"></div></a>
  <% end %>
  <% if params[:page].to_i + - 1 == 0 %>
    <a href="/home/"><div class="arrowleft"></div></a>
  <% end %>
  <div class="content">

    <div class="daynav">
      <img src="/assets/logo.png">
        <ul>
          <%= link_to refresh_events_path do %>
            <li is "refreshbutton"><img src="/assets/refresh.png" id="refresh"></li> 
          <% end %>
        </ul>
    </div><!--/daynav-->
    <div class="progress"></div>
    <%= render 'events', :events => @events %>
    <%= render 'mapform' %>
    <br>
    <div class="map" id="mapContainer"></div>
    <div id="directionsPanel"></div>
  </div><!--/content-->

  <% if params[:page].to_i + 1 <= @events.length.to_i - 1 %>
    <a href="/home/<%= params[:page].to_i + 1 %>"><div class="arrowright"></div><img src="/assets/arrow.png"></a>
  <% end %>
    
</div><!--/wrapper-->

