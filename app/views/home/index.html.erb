<style type="text/css">
#mapContainer {
    height: 250px;
    width: 280px;
    /*border:5px solid #eaeaea;*/
}

#locationPanel ul {
    list-style: none;
    padding: 0;
    margin: 0 auto;
    width: 280px
}

#locationPanel li {
    height: 45px;
    width: 280px;
    font-family: 'Open Sans', sans-serif;
    margin: 2.5px 0 2.5px 0;
    position: relative;
}

</style>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="assets/home.js"></script>

<div class="wrapper">
    <div class="arrowleft"></div>
        <div class="content">

        <% if user_signed_in? %>

          

            <%= render 'events' %>

            <div class="fullday" id="mapContainer">
              <!-- <img src="direction.png"> -->
            </div><!--/fullday-->
            
            <div id="directionsPanel">
              1. Turn Left out of the Merchandise Mart.<br> 2. Enter Brown line heading South.<br> 3. Take the train two stops South to Quincy.
            </div>

        </div><!--/content-->

    <div class="arrowright">
        
    </div>

    <% else %>
        <div class="hero-unit">
            <h1>Hello, maps!</h1>
            <p>Map out your entire day with a single click. Sign in with your Google account to start.</p>
            <p><a href="/signin" class="btn btn-primary btn-large">Sign In &raquo;</a></p>
        </div>
    <% end %>

</div><!--/wrapper-->

<script type="text/javascript">
    $(initialize());
</script>
  
<script type="text/javascript">
    $(calcRoute());
</script>

