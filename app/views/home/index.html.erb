          </div> 

          <%= render 'form' %>        
          <div id="directionsPanel">
            Enter a destination and click "Calculate route".
          </div>
        <% else %>
          <div class="hero-unit">
            <h1>Hello, maps!</h1>
            <p>Map out your entire day with a single click. Sign in with your Google account to start.</p>
            <p><a href="/signin" class="btn btn-primary btn-large">Sign In &raquo;</a></p>
          </div>
        <% end %>  
        
          <div class="row-fluid">
            <% if flash[:notice] %>
              <p class="notice"><em><%= flash[:notice] %></em></p>
            <% end %>
            <% if user_signed_in? %>
              <% @events.each do |event| %>
              <p>
                <div class="span4">
                  <!-- <h3><%#= truncate(event[:summary], :length => 25,  :separator => ' ') %></h3> -->
                  <h3><%= event[:summary] %></h3>
                  <!-- <h2>Event</h2> -->
                  <p><%= description_for(event) %></p>
                  <p><%= location_for(event) %>

                </br>
                  Begins: <%= event[:start] %></br>
                  Ends: <%= event[:end] %></p>
                  <p><a class="btn" href="#">View details &raquo;</a></p>
                </div><!--/span-->
              </p>
              <% end %>
            <% end %>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->

     

    </div><!--/.fluid-container-->

