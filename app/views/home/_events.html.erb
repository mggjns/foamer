<div class="row-fluid">
    <% if flash[:notice] %>
      <p class="notice"><em><%= flash[:notice] %></em></p>
    <% end %>
    <ul class="nav nav-list">
      <li class="nav-header">Today's Events</li>
      <% @events.each do |event| %>
        <li class="active">
          <!-- <h3><%#= truncate(event[:summary], :length => 25,  :separator => ' ') %></h3> -->
          <h3><%= event[:summary] %></h3>
          <!-- <h2>Event</h2> -->
          <p><%= description_for(event) %></p>
          <p><%= location_for(event) %>

        </br>
        
          Begins: <%= event[:start].in_time_zone(event.timezone).strftime("%l:%M%P")  %></br>
          Ends: <%= event[:end].in_time_zone(event.timezone).strftime("%l:%M%P") %></p>
          <p><a class="btn" href="#">View details &raquo;</a></p>
        </li>
      <% end %>
    </ul>
</div><!--/row-->